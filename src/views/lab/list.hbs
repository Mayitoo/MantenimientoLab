<section class="section">
  <div class="container p-4">
    <div class="card">

      <div class="card-header">
        <div class="btn-group float-right">
          <a
            href="/lab/add"
            class="button m-4 button_mover button--flex button--pequeño"
            style="text-decoration: none; color:white;"
          >Agregar <i class="uil uil-plus-circle button_mover button_icon"></i></a>
          {{! <button
            type="button"
            class="btn btn-info"
            data-toggle="modal"
            data-target="#nuevoProducto"
          ><i class="fa fa-plus" aria-hidden="true"></i> Agregar</button> }}
        </div>
        <div class="">
          <h4 class="h4"><i class="fa fa-search" aria-hidden="true"></i>
            Buscar por Laboratorio
          </h4>
        </div>
        <form class="form-inline" role="form" id="datos">
          <div class="form-group mb-2">
            <div class="form-group">
              <label for="q" class="sr-onluy">Nombre Lab</label>
            </div>
            <div class="form-group mx-sm-3">
              <input
                type="text"
                class="form-control"
                id="q"
                placeholder="Nombre de laboratorio"
                onkeyup="load(1);"
              />
            </div>
            <button
              type="button"
              class="button button--flex button--pequeño button_mover"
              onclick="load(1);"
            >
              Buscar
              <i class="uil uil-search button_icon"></i></button>
            <div class="form-group col-md-3">
            </div>
          </div>
        </form>

      </div>
      <div class="card-body">

        {{! Tabla }}
        <div class="container p-4">
          <div class="row">
            <table class="table">
              <thead class="thead_color">
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Laboratorio</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead>
              {{#each lab}}
                <tbody>
                  <tr>
                    <th scope="row">{{id_laboratorio}}</th>
                    <td scope="row">{{nombre_lab}}</td>
                    <td class="td_center">
                      <a
                        href="/lab/delete/{{id_laboratorio}}"
                        onclick="return confirm('¿Quieres eliminar al usuario {{nombre_lab}}?')"
                        class="button button_danger"
                      >Eliminar</a>
                      <a
                        href="/lab/edit/{{id_laboratorio}}"
                        class="button"
                      >Editar</a>
                    </td>
                  </tr>
                </tbody>
                {{!-- {{else}}
                
                <div class="col-md-4 mx-auto">
                  <div class="card card-body text-center">
                    <p>No Hay Categorias Guardadas Aun</p>
                    <a href="/categoria/add">Guardar uno</a>
                  </div>
                </div> --}}
              {{/each}}
            </table>

          </div>
        </div>
      </div>
    </div>

  </div>

</section>