<section class="section">
  <div class="container p-4">
  <div class="card">
    <div class="card-header">
       <div class="btn-group float-right">
          <a
            href="/registro"
            class="button m-4 button_mover button--flex button--pequeño"
            style="text-decoration: none; color:white;"
          >Agregar <i class="uil uil-plus-circle button_mover button_icon"></i></a>
        </div>
        <div class="">
          <h4 class="h4"><i class="fa fa-search" aria-hidden="true"></i>
            Buscar Usuario
          </h4>
        </div>
        <form class="form-inline" role="form" id="datos">
          <div class="form-group mb-2">
            <div class="form-group">
              <label for="q" class="sr-onluy">Nombre Usuario</label>
            </div>
            <div class="form-group mx-sm-3">
              <input
                type="text"
                class="form-control"
                id="buscaruser"
                name="buscaruser"
                placeholder="Nombre de laboratorio"
                onkeyup="load(1);"
              />
            </div>
            <button
              type="button"
              class="button button--flex button--pequeño button_mover"
              onclick="load(1);"
            >
              Buscar
              <i class="uil uil-search button_icon"></i></button>
            <div class="form-group col-md-3">
            </div>
          </div>
        </form>
    </div>

    <div class="card-body">
      {{! Tabla Usuarios }}
      <div class="container p-4">
        <div class="row">

          <table class="table">
            <thead class="thead_color">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Usuario</th>
                <th scope="col">Rol</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            {{#each usuario}}
              <tbody>
                <tr>
                  <th class="filtrar" scope="row">{{id_user}}</th>
                  <td class="filtrar">{{fullname}}</td>
                  <td class="filtrar">{{username}}</td>
                  <td class="filtrar">{{rol}}</td>
                  <td class="filtrar">
                    <a
                      href="/usuario/delete/{{id_user}}"
                      onclick="return confirm('¿Quieres eliminar al usuario {{username}}?')"
                      class="button button_danger"

                    >Eliminar</a>
                    <a
                      href="/usuario/edit/{{id_user}}"
                      class="button"
                    >Editar</a>
                  </td>
                </tr>
              </tbody>
            {{/each}}
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</section>