<section class="section">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Editar Usuario</h3>
                    </div>
                    <div class="card-body">
                        <form action="/usuario/edit/{{usuario.id_user}}" method="POST">
                            <div class="form-group">
                                <input type="text" name="fullname" value="{{usuario.fullname}}" class="form-control" autofocus>
                            </div>
                            {{!-- <div class="form-group">
                                <input type="text" name="apellidos" placeholder="Apellidos" class="form-control" autofocus>
                            </div> --}}
                            <div class="form-group">
                                <input type="text" name="username" value="{{usuario.username}}" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="correo" value="{{usuario.correo}}" class="form-control">
                            </div>
                            <div class="form-group">
                                <select class='form-control' name='rol' id='categoria' required>
                                    <option value="{{usuario.rol}}">{{usuario.rol}}</option>
                                    <option value="1">Administrador</option>
                                    <option value="2">Usuario</option>
                                            
                                </select>	
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">Registrarse</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>