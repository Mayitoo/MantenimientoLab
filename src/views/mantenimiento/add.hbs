<section class="section">
        <div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3>Ticket de soporte</h3>

                </div>
                <div class="card-body">
                    <form action="/mantenimiento/add" method="POST" >
                        <div class="form-group">
                            <select class="form-control" name="fk_ticket">
                                <option>Ticket</option>
                                {{#each soporte}}
                                <option value="{{id_ticket}}" name="fk_ticket">{{id_ticket}}</option>
                                {{/each}}
                                </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="descripcion" placeholder="Descripción:">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="estatus">
                                <option>Estatus</option>
                                <option value="1" name="status">Funcionando</option>
                                <option value="2" name="status">En reparación</option>
                                </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                            
                        </div>
                    </form>
                 </div>
            </div>
        </div>
    </div>

</div>
</section>