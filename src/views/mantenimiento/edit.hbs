<section class="section">
        <div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3>Mantenimiento</h3>

                </div>
                <div class="card-body">
                    <form action="/mantenimiento/edit/{{mantenimiento.id_mantenimiento}}" method="POST" >
                        <div class="form-group">
                            <select class="form-control" name="fk_ticket">
                                <option value="{{mantenimiento.fk_ticket}}">{{mantenimiento.fk_ticket}}</option>
