                                <option value="{{fk_ticket}}" name="fk_ticket">{{fk_ticket}}</option>
                                {{/each}}
                                </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="descripcion" value="{{mantenimiento.descripcion}}">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="estatus">
                                <option value="{{mantenimiento.estatus}}">{{mantenimiento.estatus}}</option>
                                <option value="1" name="status">Funcionando</option>
                                <option value="2" name="status">En reparaci√≥n</option>
                                </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                            
                        </div>
                    </form>
                 </div>
            </div>
        </div>
    </div>

</div>
</section>